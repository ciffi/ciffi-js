{
  "name": "ciffi-base-project",
  "version": "1.0.0",
  "author": {
    "name": "Ciffi"
  },
  "description": "Frontend Base Project",
  "main": "app-setup.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ciffi/ciffi-frontend-generator.git"
  },
  "license": "ISC",
  "homepage": "https://github.com/ciffi/ciffi-frontend-generator/tree/master/webpack",
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "base64-font-loader": "0.0.4",
    "clean-css": "^3.4.19",
    "concurrently": "^2.2.0",
    "copyfiles": "^0.2.1",
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-webpack-plugin": "^2.10.0",
    "livereload": "^0.5.0",
    "node-sass": "^3.4.2",
    "open-browser-webpack-plugin": "0.0.2",
    "postcss-cli": "^2.6.0",
    "postcss-loader": "^0.8.1",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "breakpoint-sass": "^2.7.0",
    "jquery": "^2.2.3"
  },
  "scripts": {
    "assets": "npm run copy-images && npm run copy-fonts && npm run copy-pdf && npm run copy-videos",
    "autoprefixer": "postcss --use autoprefixer --autoprefixer.browsers 'last 12 versions' -o dist/main.css dist/main.css",
    "cleancss": "cleancss -o dist/main.css dist/main.css",
    "copy-fonts": "copyfiles -u 1 static/fonts/* dist/",
    "copy-images": "copyfiles -u 1 static/images/*.* static/images/**/*.* dist/",
    "copy-pdf": "copyfiles -u 1 static/pdf/* dist/",
    "copy-videos": "copyfiles -u 1 static/videos/* dist/",
    "css": "sass --sourcemap=none static/styles/config.scss:dist/main.css",
    "live-css": "sass static/styles/config.scss:dist/main.css --watch",
    "live-js": "webpack --config dev.config.js --progress",
    "live-server": "livereload \"dist/\"",
    "styles": "npm run css && npm run autoprefixer && npm run cleancss",
    "setup": "npm install && ciffi --postsetup",
    "serve": "webpack-dev-server --config serve.config.js --progress --inline --hot",
    "dev": "webpack --config dev.config.js --progress",
    "build": "webpack --config build.config.js -p --progress --json > build-stats.json && npm run assets"
  }
}
